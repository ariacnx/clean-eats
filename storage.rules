rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read/write access to recipe images
    match /recipes/{spaceId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

